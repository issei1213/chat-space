.chat-main__message-list__middle-items-top
  .chat-main__message-list__middle-items-top__user-name
    = message.user.name

  .chat-main__message-list__middle-items-top__send-datetime
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")

.chat-main__message-list__middle-items-message
  - if message.created_at.present?
    %p.lower-message__content
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?